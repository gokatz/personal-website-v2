---
const { date, includeDate} = Astro.props;

const MonthMap = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];

const dateObject = new Date(date);
let dateString = `${MonthMap[dateObject.getMonth()]} ${dateObject.getFullYear()}`;
dateString = `${includeDate ? `${dateObject.getDate()} ${dateString}` : dateString}`
---

<span>
  {dateString}
</span>