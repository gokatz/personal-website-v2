---
import BaseHead from '../components/BaseHead.astro';
import BlogHeader from '../components/BlogHeader.astro';
import BlogPost from '../components/BlogPost.astro';


const { content } = Astro.props;
const { title, description, date, author, heroImage, permalink, alt } = content;
---

<html lang={content.lang || 'en'}>
	<head>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/prism-themes@1.9.0/themes/prism-lucario.css"/>
		<BaseHead {title} {description} {permalink} />
	</head>

	<body class="bg-primary-black ">
		<div class="wrapper text-white mx-auto p-10 m-10 bg-secondary-black">
			<BlogPost {title} {author} {heroImage} {date} {alt}>
				<slot />
			</BlogPost>
		</div>
	</body>
</html>
