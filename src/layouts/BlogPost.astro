---
import BaseHead from '../components/BaseHead.astro';
// import BlogHeader from '../components/BlogHeader.astro';
import BlogPost from '../components/BlogPost.astro';
import BackToList from '../components/BackToList.astro';
import '../styles/blog.css';


const { content } = Astro.props;
const { title, description, date, author, heroImage, permalink, alt, template, canonical } = content;

---

<html lang={content.lang || 'en'}>
	<head>
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/prism-themes@1.9.0/themes/prism-one-dark.css"/>
		<BaseHead {title} {description} {permalink} {canonical} />
	</head>

	<body class="bg-primary-black ">
		<BackToList template={template} />
		<div class="wrapper bg-white text-black mx-auto p-10 m-10 prose prose-a:text-primary-blue">
			<BlogPost {title} {author} {heroImage} {date} {alt}>
				<slot />
			</BlogPost>
		</div>
	</body>
</html>
