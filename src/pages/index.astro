---
// Component Imports
import Home from '../layouts/Home.astro';
import BlogTitle from '../components/BlogTitle.astro';

// Data Fetching: List all Markdown posts in the repo.

let allBlogs = await Astro.fetchContent('./blog/*.md');
allBlogs = allBlogs.sort((a, b) => new Date(b.date).valueOf() - new Date(a.date).valueOf());
---

<Home>
	{
		allBlogs.map((blog) => {
			return <BlogTitle blog={blog} /> 
		})
	}
</Home>