---
// Component Imports
import Shell from '../layouts/Shell.astro';
import TalkTile from '../components/TalkTile.astro';

// Data Fetching: List all Markdown posts in the repo.

let allTalks = await Astro.fetchContent('./talks/*.md');
allTalks = allTalks.sort((a, b) => new Date(b.date).valueOf() - new Date(a.date).valueOf());
---

<Shell>
	{
		allTalks.map((talk) => {
			return <TalkTile talk={talk} /> 
		})
	}
</Shell>