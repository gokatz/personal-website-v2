---
// Component Imports
import Shell from '../layouts/Shell.astro';
import MansionTile from '../components/MansionTile.astro';

// Data Fetching: List all Markdown posts in the repo.

let allProjects = await Astro.fetchContent('./projects/*.md');
allProjects = allProjects.sort((a, b) => new Date(b.date).valueOf() - new Date(a.date).valueOf());
---

<Shell>
	<div class="flex flex-wrap">
		{
			allProjects.map((project) => {
				return <MansionTile content={project} /> 
			})
		}
	</div>
</Shell>