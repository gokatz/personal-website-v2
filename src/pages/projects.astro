---
// Component Imports
import Home from '../layouts/Home.astro';
import MansionTile from '../components/MansionTile.astro';
import PageTitleForMobile from '../components/PageTitleForMobile.astro';

// Data Fetching: List all Markdown posts in the repo.

let allProjects = await Astro.glob('./projects/*.md');
allProjects = allProjects.sort((a, b) => new Date(b.frontmatter.date).valueOf() - new Date(a.frontmatter.date).valueOf());
---

<Home>
	<PageTitleForMobile title="Projects" />
	<div class="flex flex-wrap">
		{
			allProjects.map((project) => {
				return <MansionTile content={project} /> 
			})
		}
	</div>
</Home>